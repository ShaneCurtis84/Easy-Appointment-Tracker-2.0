<section class=container>
    <h1>Appointments can be searched by date</h1>
    <form class="form search-appointment-form">
        <div class="form-group">
            <label for="date-from">Date from:</label>
            <input type="date" id="date-from" />
        </div>
        <div class="form-group">
            <label for="date-to">Date to:</label>
            <input class="ml-5" type="date" id="date-to" />
        </div>
        <div class="form-group">
            <button class="button is-success" type="submit">Search</button>
        </div>
    </form>
</section>
<script src="/js/search-appointments.js"></script>